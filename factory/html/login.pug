doctype html
html(lang='en')
    include components/header
    body
        .BlahajFrame
            .BlahajLogin
                img(alt='Logo', src='https://blahaj.land/static/api/?type=image&bucket=pictures&file=theme_logo')
                form.login-form(action='', method='post', name='input')
                    label.BlahajInput(for='user')
                        img(alt='User', src='https://blahaj.land/static/api/?type=image&bucket=icons&file=user')
                        input#user(autocomplete='username', autofocus='', name='user', placeholder='Username', required='', type='text')
                    label.BlahajInput(for='password')
                        img(alt='Password', src='https://blahaj.land/static/api/?type=image&bucket=icons&file=password')
                        input#password(autocomplete='current-password', name='password', placeholder='Password', required='', type='password')
                        a#BlahajHide
                            img(alt='Hide', src='https://blahaj.land/static/api/?type=image&bucket=icons&file=input_hide-pwd')
                    input.BlahajSubmit.important(type='submit', value='Log in')
            include components/footer